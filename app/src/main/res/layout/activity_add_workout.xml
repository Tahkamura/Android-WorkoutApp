<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWorkoutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lis채채 tapahtuma"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:id="@+id/header"
        android:textSize="40dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/workoutName"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:hint="Tapahtuman nimi"
        android:inputType="textCapWords"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/workoutName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Kesto sekunteina"
        android:textAlignment="center"
        android:id="@+id/seconds"
        android:inputType="numberSigned"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lis채채 tapahtuma"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/seconds"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/addWorkoutBtn"/>



</androidx.constraintlayout.widget.ConstraintLayout>